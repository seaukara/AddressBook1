<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<div id="Address Book">
  {{#matchAddress}}
<h2>ContactInfo: {{name}}</h2>

<br>
<hr />
<br>
<br>

<form method="POST" action="/remove">
    <strong><label>Name:  </label></strong>
    <input type="text" name="name" placeholder="Contact Name" value="{{address.name}}" required maxlength="100"><br>
      <strong><label>Address: </label></strong>
    <input type="text" name="address" placeholder="Address" value="{{address.address}}" maxlength="100"><br>
     <strong> <label>Phone:  </label></strong>
    <input type="text" name="phone" placeholder="phone"  value="{{address.phone}}"maxlength="100"><br>
     <strong> <label>Additional Info: </label></strong>
    <input type="text" name="info" placeholder="additional info." value="{{address.info}}"maxlength="100"><br>
   
    <input type="hidden" name="id" value="{{address.id}}">
      <button id="remove">REMOVE</button>
      <button id="update">UPDATE</button>
</form>
{{/matchAddress}}

</div>

    


<script>
  //JQUERY FOR BUTTONS
    $(document).ready(function(){
        var buttons = $('button');
        buttons.on('click', function() {
            var $this = $(this);
            var action = $this.text().toLowerCase();
            $("form").attr("action", "/"+ action);
        });
    });
</script>
